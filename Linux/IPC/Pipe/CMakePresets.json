{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22
  },
  "configurePresets": [
    {
      "name": "conf-common",
      "description": "General CMake settings applied to all configurations",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}"
    },
    {
      "name": "conf-debug",
      "description": "Debug build configuration",
      "inherits": [
        "conf-common"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "conf-release",
      "description": "Release build configuration",
      "inherits": [
        "conf-common"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-pipe",
      "configurePreset": "conf-release",
      "description": "Linux pipe used in single application",
      "targets": [
        "pipe"
      ],
      "verbose": true
    }
  ]
}
